<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TrangMain.NhanTinFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbGhiChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bg_toolbarcam2"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgWVBack"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_webview_back" />

            <ImageView
                android:id="@+id/imgWVNext"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_webview_next" />

            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/imgWVLoad"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_webview_reload" />

            <AutoCompleteTextView
                android:inputType="text"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/edtWebLink"
                android:background="@drawable/bg_nensearch"
                android:hint="Địa chỉ trang Web"
                android:completionThreshold="1"/>

            <ImageView
                android:id="@+id/imgMoWeb"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_webview_search" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <WebView
        android:background="@color/purple_200"
        android:id="@+id/wvHienThi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="68dp"/>

</FrameLayout>