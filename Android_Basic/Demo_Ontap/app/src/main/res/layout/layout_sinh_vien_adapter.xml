        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/adapter_maSV"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:id="@+id/adapter_hoTen"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:id="@+id/adapter_diemTrungBinh"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:id="@+id/adapter_xepLoai"
        />

</LinearLayout>