<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_green"
    tools:context=".Activity.StartActivity">

    <LinearLayout
        android:id="@+id/lnKhungSA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgLogoSA"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/money_lover_logo" />

        <TextView
            android:layout_marginVertical="10dp"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/txtTenLogoSA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Money Lover" />

        <TextView
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="50dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/txtStatusSA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_start" />

        <Button
            android:stateListAnimator="@null"
            android:textSize="16sp"
            android:textColor="@color/bg_green"
            android:background="@drawable/bg_button_nentrang_chutrong"
            android:layout_marginHorizontal="25dp"
            android:id="@+id/btnDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dangky" />

        <Button
            android:stateListAnimator="@null"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_nentrong_chutrang"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"
            android:id="@+id/btnDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dangnhap" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>