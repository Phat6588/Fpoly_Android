<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MainFragment.ThongKeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/txtSoDu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số dư" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:id="@+id/txtSoDuDau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số dư đầu" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/txtGiaTriSoDuDau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:id="@+id/txtSoDuCuoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số dư cuối" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/txtGiaTriSoDuCuoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1,000,000" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/txtCacKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoản thu và Khoản chi" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginVertical="5dp"
                    android:id="@+id/txtThuNhapRong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thu nhập ròng" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/txtGiaTriThuNhapRong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1,000,000" />

            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:id="@+id/txtKhoangThu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khoản thu" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:id="@+id/txtGiaTriKhoanThu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="5dp"
                        android:id="@+id/txtKhoanChi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khoản chi" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/google"
                        android:textStyle="bold"
                        android:id="@+id/txtGiaTriKhoanChi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1,000,000" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>