<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_nen_dialog">

    <androidx.appcompat.widget.Toolbar
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_green_gradient"
        app:contentInsetEnd="15dp"
        app:contentInsetStart="15dp"
        android:id="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center|left"
                android:id="@+id/txtTieuDeSuaKhoan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Thêm khoản" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgThoatThemKhoan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_dialog_close" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtSoTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_nentext"
            android:drawableLeft="@drawable/load_dialog_money"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Số tiền"
            android:inputType="number"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtChonLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_nentext"
            android:drawableLeft="@drawable/load_dialog_folder"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Chọn loại"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtChonNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_nentext"
            android:drawableLeft="@drawable/load_dialog_lich"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Chọn ngày"
            android:inputType="date"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/edtChonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_nentext"
            android:drawableLeft="@drawable/ic_purse_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Chọn ví"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnThemKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button_xanh_gradient"
            android:paddingVertical="10dp"
            android:text="Tạo mới"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>